{
  "name": "aws-crt-swift",
  "enabled": true,
  "needs_compiler": false,
  "build_steps": [
    "swift --version",
    "swift build -c release"
  ],
  "test_steps": [
    "swift test" 
  ],
  "hosts": {
    "al2012": {
      "enabled": false
    },
    "alpine": {
      "enabled": false
    },
    "windows": {
      "enabled": false
    }
  },
  "targets": {
    "ios": {
      "!build_steps": [
        "xcodebuild -scheme AwsCommonRuntimeKit -destination 'generic/platform=iOS'"
      ]
    },
    "tvos": {
      "!build_steps": [
        "xcodebuild -scheme AwsCommonRuntimeKit -destination 'generic/platform=tvOS'"
      ]
    },
    "watchos": {
      "!build_steps": [
        "xcodebuild -scheme AwsCommonRuntimeKit -destination 'generic/platform=watchOS'"
      ]
    },
    "macos": {
      "!test_steps": [
        "swift build --build-tests --enable-index-store --configuration debug -Xlinker -rpath -Xlinker \"$(xcode-select -p)/Toolchains/XcodeDefault.xctoolchain/usr/lib/swift-5.5/macosx\"",
        "swift test --skip-build --enable-index-store --configuration debug",
        "swift build -c release -Xlinker -rpath -Xlinker \"$(xcode-select -p)/Toolchains/XcodeDefault.xctoolchain/usr/lib/swift-5.5/macosx\"",
        "./integ_test.sh"
      ]
    }
  }
}
