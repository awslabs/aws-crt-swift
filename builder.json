{
  "name": "aws-crt-swift",
  "enabled": true,
  "needs_compiler": false,
  "build_steps": [
    "swift --version",
    "swift build"
  ],
  "test_steps": [
    "swift test" 
  ],
  "hosts": {
    "al2012": {
      "enabled": false
    },
    "alpine": {
      "enabled": false
    },
    "windows": {
      "enabled": false
    }
  },
  "targets": {
    "ios": {
      "!build_steps": [
        "xcodebuild -scheme AwsCommonRuntimeKit -destination 'generic/platform=iOS' -configuration Debug"
      ]
    },
    "tvos": {
      "!build_steps": [
        "xcodebuild -scheme AwsCommonRuntimeKit -destination 'generic/platform=tvOS' -configuration Debug"
      ]
    },
    "watchos": {
      "!build_steps": [
        "xcodebuild -scheme AwsCommonRuntimeKit -destination 'generic/platform=watchOS' -configuration Debug"
      ]
    },
    "macos": {
      "!test_steps": [
        "swift build -c release",
        "./integ_test.sh"
      ]
    }
  }
}
